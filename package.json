	},
	"devDependencies": {
		"@schlagerkhan/prettier-config": "^0.0.1",
		"lerna": "^3.19.0",
		"prettier": "^1.19.1",
		"react": "^16.12.0",
		"typescript": "^3.7.2"
	}
}
