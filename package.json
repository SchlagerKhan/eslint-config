{
	"private": true,
	"name": "@schlagerkhan/eslint-config",
	"prettier": "@schlagerkhan/prettier-config",
	"workspaces": {
		"packages": [
			"packages/*"
		],
		"nohoist": []
	},
	"scripts": {
		"lint": "npx lerna run lint",
		"test": "npx eslint test",
